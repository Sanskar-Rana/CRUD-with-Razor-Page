@page
@model LearningRazoPages.Pages.StudentPage.DeleteModel
@{
    ViewData["Title"] = "Edit Student Information";
}

<form method="post">
    <input hidden asp-for="Student.Id" />
    <div class="border p-3 mt-4">
        <h2 class="text-primary pl-3">Delete Student Record</h2>
        <hr />
   
    <div class="mb-3">
        <label asp-for="Student.studentName"></label>
        <input type="text" asp-for="Student.studentName" class="form-control" disabled />
    </div>
    <div class="mb-3">
        <label asp-for="Student.studentAddress"></label>
        <input type="text" asp-for="Student.studentAddress" class="form-control" disabled />
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary mx-2" asp-page="Index">Cancel</a>
     </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}