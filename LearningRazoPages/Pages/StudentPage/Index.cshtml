@page
@model LearningRazoPages.Pages.StudentPage.IndexModel
@{
    ViewData["Title"] = "Student Information";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Student List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-page="create">Add Student Record</a>
        </div>
    </div>
     <br /><br />
     <table class="table table-light table-striped" style="width:100%">
         <thead>
             <tr>
                 <th>Id</th>
                 <th>Student Name</th>
                 <th>Student Address</th>
                 <th>Actions</th>
             </tr>
         </thead>
         <tbody>
             @foreach (var obj in Model.Students)
             {
                 <tr>
                     <td>@obj.Id</td>
                     <td>@obj.studentName</td>
                     <td>@obj.studentAddress</td>
                     <td>
                         <div class="w-75 btn-group" role="group">
                             <a class="btn btn-secondary mx-2" asp-page="Edit" asp-route-id="@obj.Id">Edit</a>
                             <a class="btn btn-danger mx-2" asp-page="Delete" asp-route-id="@obj.Id">Delete</a>
                         </div>
                     </td>
                 </tr>
             }
         </tbody>
     </table>
</div>